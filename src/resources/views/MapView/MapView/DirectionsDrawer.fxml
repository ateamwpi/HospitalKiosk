<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>
<Pane fx:id="root" layoutX="6.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="toggleContainer">
        <padding>
            <Insets left="310.0" top="10.0" />
        </padding>
        <Pane styleClass="drawer-toggle" stylesheets="@/resources/styles/MapView.css">
            <Label fx:id="drawerClose" prefHeight="48.0" prefWidth="23.0" styleClass="chevron-left" stylesheets="@/resources/styles/MapView.css" />
        </Pane>
    </VBox>
    <VBox fx:id="searchContainer" prefWidth="310.0">
        <VBox fx:id="searchHeader" styleClass="header" stylesheets="@/resources/styles/MapView.css">
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <VBox>
                <padding>
                    <Insets bottom="10.0" left="20.0" top="20.0"/>
                </padding>
                <Label fx:id="optionsMenuButton" prefHeight="20.0" prefWidth="20.0" styleClass="hamburger-icon"
                       stylesheets="@/resources/styles/MapView.css"/>
            </VBox>
            <HBox>
                <VBox>
                    <padding>
                        <Insets left="20.0" right="10.0" top="12.0"/>
                    </padding>
                    <Label prefHeight="20.0" prefWidth="20.0" styleClass="start-icon"
                           stylesheets="@/resources/styles/MapView.css"/>
                    <Label prefHeight="20.0" prefWidth="20.0" styleClass="ellipsis-icon"
                           stylesheets="@/resources/styles/MapView.css">
                        <padding>
                            <Insets bottom="10.0"/>
                        </padding>
                    </Label>
                    <Label prefHeight="20.0" prefWidth="20.0" styleClass="end-icon"
                           stylesheets="@/resources/styles/MapView.css"/>
                </VBox>
                <VBox spacing="15.0">
                    <JFXTextField fx:id="start" prefWidth="220.0" promptText="Your location" styleClass="search"
                                  stylesheets="@/resources/styles/MapView.css"/>
                    <JFXTextField fx:id="end" promptText="Choose destination..." styleClass="search"
                                  stylesheets="@/resources/styles/MapView.css"/>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </HBox>
        </VBox>
        <VBox fx:id="searchResults">
     </VBox>
    </VBox>
     <VBox fx:id="directionsContainer" prefWidth="310.0">
         <HBox styleClass="header" stylesheets="@/resources/styles/MapView.css">
             <VBox>
                 <padding>
                     <Insets bottom="10.0" left="20.0" top="20.0"/>
                 </padding>
                 <Label onMouseClicked="#showSearch" prefHeight="20.0" prefWidth="20.0" styleClass="back-icon"
                        stylesheets="@/resources/styles/MapView.css"/>
             </VBox>
             <VBox spacing="10.0">
                 <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                 </padding>
                 <TextFlow fx:id="fromFlow" prefWidth="200.0"/>
                 <TextFlow fx:id="toFlow" prefWidth="200.0"/>
             </VBox>
         </HBox>
         <HBox>
             <padding>
                 <Insets bottom="10.0" top="10.0"/>
             </padding>
             <HBox alignment="CENTER" prefWidth="155.0">
                 <Label onMouseClicked="#printDirections" prefHeight="30.0" prefWidth="30.0" styleClass="printer-icon"
                        stylesheets="@/resources/styles/MapView.css"/>
             </HBox>
             <HBox alignment="CENTER" prefWidth="155.0">
                 <Label onMouseClicked="#speakDirections" prefHeight="30.0" prefWidth="30.0" styleClass="volume-icon"
                        stylesheets="@/resources/styles/MapView.css"/>
             </HBox>
         </HBox>
         <VBox alignment="CENTER_LEFT">
             <padding>
                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
             </padding>
             <Label fx:id="startLabel" text="Start">
                 <font>
                     <Font name="System Bold" size="17.0"/>
                 </font>
             </Label>
         </VBox>
      <VBox fx:id="directions" />
         <VBox alignment="CENTER_LEFT">
             <Label fx:id="endLabel" text="End">
                 <font>
                     <Font name="System Bold" size="17.0"/>
                 </font>
                 <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                 </padding>
             </Label>
         </VBox>
     </VBox>
</Pane>
